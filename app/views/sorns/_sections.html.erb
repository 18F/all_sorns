<div class="usa-accordion__heading">
  <button class="usa-accordion__button" aria-controls="section-accordion" type="button">Sections</button>
</div>
<div id="section-accordion" class="usa-accordion__content usa-prose">
  <fieldset id="sections" class="usa-fieldset">
    <button id='fields-deselect-all' class="clear-all usa-button  usa-button--unstyled"><%= image_tag("close-red-50.svg", role: "img", alt: "")%>Clear section filters</button>
    <div id="sorn-fields">
      <% Sorn::FIELDS.each do |field, index| %>
        <div class="usa-checkbox">
          <input class="usa-checkbox__input" id="fields-<%= field %>" type="checkbox" name="fields[]" value="<%= field %>" <%= "checked" if field_selected?(field.to_s) %>>
          <label class="usa-checkbox__label" for="fields-<%= field %>"><%= field.to_s.humanize %></label>
        </div>
      <% end %>
    </div>
  </fieldset>
</div>
