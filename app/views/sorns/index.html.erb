<div class="explainer">
  <div class="grid-container">
    <div class="grid-row grid-gap">
      <div class="tablet:grid-col-7">
        <p class="explainer__text">WHATEVER</p>
      </div>
      <div class="tablet:grid-col-5">
        <p class="explainer__text text-right">OKAY</p>
      </div>
    </div>
  </div>
</div>

  <div class="grid-container">
    <div class="grid-row grid-gap">
      <main class="usa-layout-docs__main desktop:grid-col-9 usa-prose usa-layout-docs" id="main-content">
        <div class="grid-row margin-top-2 margin-right-0">
          <div class="grid-col-12">
            <%= form_tag('/', method: "get", class: "usa-search") do %>
              <input class="usa-input" id="general-search" type="search" name="search">
              <button id="general-search-button" class="usa-button" type="submit">
                <span class="usa-search__submit-text">Search</span>
              </button>
            <% end %>
          </div>
        </div>
        <div class="grid-row margin-top-2 margin-right-0 results-meta">
          <div class="grid-col-6 display-inline results-meta__filters">
            <span class="results-meta__label ">Something: </span>
            <ul id="active-filters" class="margin-top-05 margin-bottom-05 padding-0">
            </ul>
          </div>


          <div class="grid-col-6 margin-bottom-0 text-right results-meta__count">
             <div id="search-result-counter" class="font-body-xs">
              Showing <span id="result-count" class="text-bold"><%= @count %></span> of <span id="total-count" class="text-bold"><%= @count %></span> <span id="search-term"></span>
            </div>
            <%= paginate @sorns %>
          </div>
        </div>
        <div id="cards">
          <div class="list">
            <% @sorns.each do |sorn| %>
              <div class="card card--sorn padding-2 margin-top-2 margin-right-0 usa-accordion" aria-multiselectable="true">
                <div class="grid-row margin-bottom-105">
                  <h2 class="system card__h2 card__h2--sorn">
                    <%= highlight(sorn.system_name, params[:search]) %>
                  </h2>
                </div>

                <div class="grid-row margin-bottom-105">
                  <div class="tablet:grid-col-2">
                    <span class="card__label">Number:</span>
                  </div>
                  <div class="authority tablet:grid-col-10">
                    <span><%= sorn.system_number %></span>
                  </div>
                </div>

                <div class="grid-row margin-bottom-105">
                  <div class="tablet:grid-col-2">
                    <span class="card__label">Agency:</span>
                  </div>
                  <div class="authority tablet:grid-col-10">
                    <span><%= sorn.agency.name %></span>
                  </div>
                </div>

                <%
=begin%>
 <h4 class>
                  <button class="usa-accordion__button"
                    aria-expanded="false"
                    aria-controls="a1">
                    purpose:
                  </button>
                  <div id="a1" class="usa-accordion__content usa-prose">
                    <%= sorn.purpose %>
                  </div>
                </div>

                <div class="grid-row margin-bottom-105">
                  <div class="tablet:grid-col-2">
                    <span class="card__label">Summary:</span>
                  </div>
                  <div class="authority tablet:grid-col-10">
                    <span><%= sorn.summary %></span>
                  </div>
                </div>

                <div class="grid-row margin-bottom-105">
                  <div class="tablet:grid-col-2">
                    <span class="card__label">Dates:</span>
                  </div>
                  <div class="authority tablet:grid-col-10">
                    <span><%= sorn.dates %></span>
                  </div>
                </div>

                <div class="grid-row margin-bottom-105">
                  <div class="tablet:grid-col-2">
                    <span class="card__label">Addresses:</span>
                  </div>
                  <div class="authority tablet:grid-col-10">
                    <span><%= sorn.addresses %></span>
                  </div>
                </div>

                <div class="grid-row margin-bottom-105">
                  <div class="tablet:grid-col-2">
                    <span class="card__label">Further Information:</span>
                  </div>
                  <div class="authority tablet:grid-col-10">
                    <span><%= sorn.further_info %></span>
                  </div>
                </div>


                <div class="grid-row margin-bottom-105">
                  <div class="tablet:grid-col-2">
                    <span class="card__label">Supplementary Information:</span>
                  </div>
                  <div class="authority tablet:grid-col-10">
                    <span><%= sorn.supplementary_info %></span>
                  </div>
                </div>
<%
=end%>

                <% if sorn.security %>
                  <h4 class="usa-accordion__heading">
                    <button class="usa-accordion__button"
                      aria-expanded="false"
                      aria-controls="security">
                      security:
                    </button>
                  </h4>
                    <div id="security" class="usa-accordion__content usa-prose">
                      <%= sorn.security %>
                    </div>
                <% end %>

                <% if sorn.location %>
                  <h4 class="usa-accordion__heading">
