                <% end %>


                <% if sorn.retrieval %>
                  <h4 class="usa-accordion__heading">
                    <button class="usa-accordion__button"
                      aria-expanded="false"
                      aria-controls="retrieval">
                      retrieval:
                    </button>
                  </h4>
                    <div id="retrieval" class="usa-accordion__content usa-prose">
                      <%= sorn.retrieval %>
                    </div>
                <% end %>

                <% if sorn.retention %>
                  <h4 class="usa-accordion__heading">
                    <button class="usa-accordion__button"
