                      aria-controls="safeguards">
                      safeguards:
                    </button>
                  </h4>
                    <div id="safeguards" class="usa-accordion__content usa-prose">
                      <%= sorn.safeguards %>
                    </div>
                <% end %>



                <% if sorn.access %>
                  <h4 class="usa-accordion__heading">
                    <button class="usa-accordion__button"
                      aria-expanded="false"
                      aria-controls="access">
                      access:
                    </button>
                  </h4>
                    <div id="access" class="usa-accordion__content usa-prose">
                      <%= sorn.access %>
                    </div>
                <% end %>




                <% if sorn.contesting %>
                  <h4 class="usa-accordion__heading">
                    <button class="usa-accordion__button"
                      aria-expanded="false"
                      aria-controls="contesting">
                      contesting:
                    </button>
                  </h4>
                    <div id="contesting" class="usa-accordion__content usa-prose">
                      <%= sorn.contesting %>
                    </div>
                <% end %>


                <% if sorn.notification %>
                  <h4 class="usa-accordion__heading">
                    <button class="usa-accordion__button"
                      aria-expanded="false"
                      aria-controls="notification">
                      notification:
                    </button>
                  </h4>
                    <div id="notification" class="usa-accordion__content usa-prose">
                      <%= sorn.notification %>
                    </div>
                <% end %>

                <% if sorn.exemptions %>
                  <h4 class="usa-accordion__heading">
                    <button class="usa-accordion__button"
                      aria-expanded="false"
                      aria-controls="exemptions">
                      exemptions:
                    </button>
                  </h4>
                    <div id="exemptions" class="usa-accordion__content usa-prose">
                      <%= sorn.exemptions %>
                    </div>
                <% end %>

                <% if sorn.history %>
                  <h4 class="usa-accordion__heading">
                    <button class="usa-accordion__button"
                      aria-expanded="false"
                      aria-controls="history">
                      history:
                    </button>
                  </h4>
                    <div id="history" class="usa-accordion__content usa-prose">
                      <%= sorn.history %>
                    </div>
                <% end %>


                <%
=begin%>
 <div class="grid-row margin-bottom-105">
                  <div class="tablet:grid-col-2">
                    <span class="card__label">Links:</span>
                  </div>
                  <div class="authority tablet:grid-col-10">
                    <span><%= link_to 'html', sorn.html_url %></span>
                    <span><%= link_to 'xml', sorn.xml_url %></span>
                  </div>
                </div>
<%
=end%>
              </div>
            <% end %>
          </div>
        </div>
      </main>
    </div>
  </div>
</div>