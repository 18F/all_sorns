                      aria-controls="authority">
                      authority:
                    </button>
                  </h4>
                    <div id="authority" class="usa-accordion__content usa-prose">
                      <%= sorn.authority %>
                    </div>
                <% end %>


                <% if sorn.purpose %>
                  <h4 class="usa-accordion__heading">
                    <button class="usa-accordion__button"
                      aria-expanded="true"
                      aria-controls="purpose">
                      purpose:
                    </button>
                  </h4>
                    <div id="purpose" class="usa-accordion__content usa-prose">
                      <%= highlight(sorn.purpose, params[:search]) %>
