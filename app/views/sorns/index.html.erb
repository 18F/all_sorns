                <% end %>

                <% if sorn.source %>
                  <h4 class="usa-accordion__heading">
                    <button class="usa-accordion__button"
                      aria-expanded="false"
                      aria-controls="source">
                      source:
                    </button>
                  </h4>
                    <div id="source" class="usa-accordion__content usa-prose">
